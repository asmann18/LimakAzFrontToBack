@model TariffVM
<!-- Main Start -->
<main id="main"
      style="background: url(./assets/images/limak_bg.jpg) no-repeat; background-size: 100%; background-position: top center;"
      class="bg-full">
    <div class="main-container">
        <!-- Currency -->
        <div class="block">
            <div class="block-header">
                <h2 class="block-title">ÖLKƏLƏR ÜZRƏ TARİFLƏR</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Ana səhifə</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <span>Tariflər</span>
                    </li>
                </ul>
            </div>
            <div class="block-body">
                <div class="currency-div">
                    <div class="currency-wrapper">
                        <div class="currency-inner">
                            <div class="left-side">
                                <div class="card tariff-card">
                                    <div class="tariff-card-header">
                                        <img src="~/assets/images/tr-circle.svg" alt="">
                                        <h3>Türkiyə</h3>
                                    </div>
                                    <div class="tabs">
                                        <ul class="nav nav-tabs">
                                            <li class="nav-item">
                                                <a href="#" class="nav-link active">
                                                    Bakı - İçərişəhər
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Bakı - Xalqlar Dostluğu
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Xırdalan
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Sumqayıt
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Gəncə
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Zaqatala
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <ul>
                                                @foreach (TariffGetDto tariff in Model.TurkeyTariffs)
                                                {
                                                    <li>
                                                        <div class="weight"><strong>@tariff.MinValue kq - @tariff.MaxValue kq</strong></div>
                                                        <div class="price"><strong>@tariff.Price</strong> ₼</div>
                                                    </li>

                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="left-side">
                                <div class="card tariff-card">
                                    <div class="tariff-card-header">
                                        <img src="~/assets/images/usa-circle.svg" alt="">
                                        <h3>ABŞ</h3>
                                    </div>
                                    <div class="tabs">
                                        <ul class="nav nav-tabs">
                                            <li class="nav-item">
                                                <a href="#" class="nav-link active">
                                                    Bakı - İçərişəhər
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Bakı - Xalqlar Dostluğu
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Xırdalan
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Sumqayıt
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Gəncə
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#" class="nav-link ">
                                                    Zaqatala
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <ul>
                                                @foreach (TariffGetDto tariff in Model.AmericaTariffs)
                                                {
                                                    <li>
                                                        <div class="weight"><strong>@tariff.MinValue kq - @tariff.MaxValue kq</strong></div>
                                                        <div class="price"><strong>@tariff.Price</strong> ₼</div>
                                                    </li>

                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main End -->