@model LoginDto

<!-- Main Start -->
<main id="main"
      style="background: url(./assets/images/limak_bg.jpg) no-repeat; background-size: 100%; background-position: top center;"
      class="bg-full">
    <div class="main-container">
        <div class="login-sec">
            <div class="block">
                <!-- Block Header -->
                <div class="block-header">
                    <h2 class="title page-title">HESABA DAXIL OL</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Ana səhifə</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <span>Daxil ol</span>
                        </li>
                    </ul>
                </div>
                <div class="block-body">
                    <div class="card card-auth card-reg mb-20">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="modal-site">
                                    <div class="login">
                                        <div class="block">
                                            <div class="block-body">
                                                <div class="card card-auth mb-20">
                                                    <div class="row">
                                                        <div class="col-md-6 col-12">
                                                            <div class="card-auth-header">
                                                                <img src="~/assets/images/user-color.svg" alt=""
                                                                     class="card-auth-icon">
                                                                <h1 class="card-auth-title upper">
                                                                    Hesaba daxil ol
                                                                </h1>
                                                            </div>
                                                            <form action="" method="post" class="card-auth-form">

                                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                                <input id="login-email" name="email" asp-for="Email" type="email"
                                                                       placeholder="E-mail*" required="required"
                                                                       aria-required="true" class="form-control">
                                                                <span asp-validation-for="Email" class="text-danger"></span>
                                                                <div role="group" class="input-group">
                                                                    <input id="login-password" name="password"
                                                                           type="password" placeholder="Şifrə*"
                                                                           required="required" asp-for="Password" aria-required="true"
                                                                           class="form-control">
                                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                                    <a class="visiblity-btn-password showPass">
                                                                        <span aria-hidden="true"
                                                                              class="show-password hide-eye"></span>
                                                                    </a>
                                                                </div>
                                                                <fieldset class="form-group">
                                                                    <div>
                                                                        <div class="row">
                                                                            <div class="col-5">
                                                                                <div class="custom-control custom-checkbox">
                                                                                    <input type="checkbox"
                                                                                           class="custom-control-input">
                                                                                    <label for=""
                                                                                           class="custom-control-label">
                                                                                        Məni
                                                                                        xatırla
                                                                                    </label>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-7">
                                                                                <div class="text-right">
                                                                                    <a href="#" class="form-link">
                                                                                        <img src="~/assets/images/help.svg"
                                                                                             alt="">
                                                                                        <span>
                                                                                            Şifrəni
                                                                                            unutmusunuz
                                                                                        </span>
                                                                                    </a>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </fieldset>
                                                                <div class="row">
                                                                    <div class="col-6">
                                                                        <div class="login-submit">
                                                                            <button type="submit"
                                                                                    class="btn btn-submit btn-primary">
                                                                                <span>Daxil ol</span>
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6">
                                                                        <div class="login-submit-reg">
                                                                            <a asp-action="Index" asp-controller="Register"
                                                                               class="btn btn-primary btn-submit">
                                                                                QEYDİYYAT
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                        <div class="col-md-6 col-12">
                                                            <div class="card-auth-image text-right">
                                                                <img src="~/assets/images/login-image.svg" alt=""
                                                                     class="card-img">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main End -->
