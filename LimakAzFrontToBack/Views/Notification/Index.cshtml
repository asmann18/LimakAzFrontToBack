@model List<NotificationGetDto>
<!-- Main Start -->
<main id="main"
      style="background: url(./assets/images/limak_bg.jpg) no-repeat; background-size: 100%; background-position: top center;"
      class="bg-full">
    <div class="main-container" style="max-width: 114rem;">
        <section id="user-panel">
            <div class="block">
                <div class="block-header">
                    <h2 class="block-title" style="font-size: 17px;text-transform: uppercase;">
                        İstifadəçi Paneli
                    </h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Ana səhifə</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <span>İstifadəçi Paneli</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <!-- Aside -->
                @await Component.InvokeAsync("UserPanel")
                <!-- Content -->
                <div class="col-sm-12 col-md-8 col-lg-9">
                    <div>
                        <div class="content">
                            <div class="content-header" style="margin-bottom: 2rem;">
                                <button class="btn btn-submit btn-primary btn-sm">
                                    <span>
                                        Yenilə
                                        <i class="fas fa-sync"></i>
                                    </span>
                                </button>
                                <button class="btn btn-submit btn-primary btn-sm c-sm">
                                    <span>Hamısını oxu</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                         fill="currentColor" viewBox="0 0 16 16" class="bi bi-check2-all">
                                        <path d="M12.354 4.354a.5.5 0 0 0-.708-.708L5 10.293 1.854 7.146a.5.5 0 1 0-.708.708l3.5 3.5a.5.5 0 0 0 .708 0l7-7zm-4.208 7-.896-.897.707-.707.543.543 6.646-6.647a.5.5 0 0 1 .708.708l-7 7a.5.5 0 0 1-.708 0z">
                                        </path>
                                        <path d="m5.354 7.146.896.897-.707.707-.897-.896a.5.5 0 1 1 .708-.708z">
                                        </path>
                                    </svg>
                                </button>
                            </div>
                            <div class="card order-item order-item-notfic">
                                <div class="card-body" style="padding: 2rem !important;">
                                    <div>
                                        <div class="table-responsive">
                                            <table aria-colcount="4"
                                                   class="table b-table order-table order-table-notf">
                                                <thead role="rowgroup" class="">
                                                    <!---->
                                                    <tr role="row" class="">
                                                        <th role="columnheader" scope="col" aria-colindex="1"
                                                            class="">
                                                            <div>№</div>
                                                        </th>
                                                        <th role="columnheader" scope="col" aria-colindex="2"
                                                            class="">
                                                            <div>Mövzu</div>
                                                        </th>
                                                        <th role="columnheader" scope="col" aria-colindex="3"
                                                            class="">
                                                            <div>Tarix</div>
                                                        </th>
                                                        <th role="columnheader" scope="col" aria-colindex="4"
                                                            class="">
                                                            <div>Əməliyyat</div>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody role="rowgroup">
                                                    <!---->
                                                    @foreach (var tr in Model)
                                                    {

                                                        <tr role="row" style=@(!tr.IsRead ? "font-color: red"  : "")class="">
                                                            <td aria-colindex="1" role="cell" class="">
                                                                @tr.Id
                                                            </td>
                                                            <td aria-colindex="2" role="cell" class="">@tr.Subject</td>
                                                            <td aria-colindex="3" role="cell" class="">
                                                                @tr.CreatedTime
                                                            </td>
                                                            <td aria-colindex="4" role="cell" class="">@tr.Title</td>
                                                        </tr>
                                                    }
                                                    <!---->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
<!-- Main End -->